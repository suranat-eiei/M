    <script>
        // ‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏à‡∏î‡∏´‡∏°‡∏≤‡∏¢‡∏£‡∏±‡∏Å
        const letters = [
            "‡∏£‡∏±‡∏Å‡∏ö‡∏µ‡πâ‡∏ô‡∏∞ ‡∏ñ‡∏∂‡∏á‡∏ö‡∏≤‡∏á‡∏ó‡∏µ‡πà‡∏ó‡∏≥‡∏ï‡∏±‡∏ß‡πÑ‡∏°‡πà‡∏î‡∏µü§≠",
            "‡∏ó‡∏≥‡∏ï‡∏±‡∏ß‡∏î‡∏µ‡πÜ‡∏•‡πà‡∏∞ü´£",
            "‡∏°‡∏µ‡∏Å‡∏±‡∏ô‡πÉ‡∏ô‡∏ó‡∏∏‡∏Å‡πÜ‡∏ß‡∏±‡∏ô‡∏Ñ‡∏±‡πâ‡∏öü•∞"
        ];

        function newLetter(){
            const letterEl = document.getElementById("letter");
            letterEl.classList.remove("fade-in");
            void letterEl.offsetWidth; // Force reflow
            letterEl.classList.add("fade-in");
            
            const randomLetter = letters[Math.floor(Math.random() * letters.length)];
            letterEl.innerText = '" ' + randomLetter + ' "';
        }

        // ‡∏£‡∏∞‡∏ö‡∏ö‡πÄ‡∏Å‡∏°‡∏à‡∏±‡∏ö‡∏´‡∏±‡∏ß‡πÉ‡∏à
        let score = 0;
        let timeLeft = 15;
        let gameInterval;
        let timerInterval;
        let isPlaying = false;

        function startGame(){
            if(isPlaying) return;
            
            isPlaying = true;
            score = 0;
            timeLeft = 15;
            document.getElementById("score").innerText = score;
            document.getElementById("timer").innerText = timeLeft;
            document.getElementById("game-message").innerText = "‡∏£‡∏µ‡∏ö‡∏à‡∏±‡∏ö‡∏´‡∏±‡∏ß‡πÉ‡∏à!";
            
            const heart = document.getElementById("heart");
            const startBtn = document.getElementById("start-btn");
            const placeholder = document.getElementById("game-placeholder");
            
            heart.classList.remove("hidden");
            placeholder.classList.add("hidden");
            startBtn.disabled = true;
            startBtn.innerText = "‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÄ‡∏•‡πà‡∏ô...";

            moveHeart();
            gameInterval = setInterval(moveHeart, 800);
            
            timerInterval = setInterval(() => {
                timeLeft--;
                document.getElementById("timer").innerText = timeLeft;
                if(timeLeft <= 0) endGame();
            }, 1000);
        }

        function moveHeart(){
            const heart = document.getElementById("heart");
            const gameArea = document.getElementById("game-area");
            
            const maxX = gameArea.clientWidth - 40; 
            const maxY = gameArea.clientHeight - 40;
            
            const randomX = Math.floor(Math.random() * maxX);
            const randomY = Math.floor(Math.random() * maxY);
            
            heart.style.left = randomX + "px";
            heart.style.top = randomY + "px";
        }

        function catchHeart(){
            if(!isPlaying) return;
            score++;
            document.getElementById("score").innerText = score;
            moveHeart();
            clearInterval(gameInterval);
            gameInterval = setInterval(moveHeart, 800);
        }

        function endGame(){
            isPlaying = false;
            clearInterval(timerInterval);
            clearInterval(gameInterval);
            
            document.getElementById("heart").classList.add("hidden");
            document.getElementById("game-placeholder").classList.remove("hidden");
            
            const startBtn = document.getElementById("start-btn");
            startBtn.disabled = false;
            startBtn.innerText = "‡πÄ‡∏•‡πà‡∏ô‡∏≠‡∏µ‡∏Å‡∏Ñ‡∏£‡∏±‡πâ‡∏á";
            
            const msg = document.getElementById("game-message");
            msg.innerText = `‡∏à‡∏ö‡πÄ‡∏Å‡∏°! ‡πÑ‡∏î‡πâ‡πÑ‡∏õ ${score} ‡∏Ñ‡∏∞‡πÅ‡∏ô‡∏ô üíñ`;
        }

        // ‡∏£‡∏∞‡∏ö‡∏ö‡∏û‡∏£‡∏µ‡∏ß‡∏¥‡∏ß‡∏£‡∏π‡∏õ‡∏†‡∏≤‡∏û
        function previewPhoto(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const preview = document.getElementById("photo-preview");
                    const placeholder = document.getElementById("photo-placeholder");
                    preview.src = e.target.result;
                    preview.classList.remove("hidden");
                    placeholder.classList.add("hidden");
                }
                reader.readAsDataURL(file);
            }
        }
    </script>
